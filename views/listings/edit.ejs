<% layout('./boilerplate.ejs') -%>
<body>
  <div class="row px-1 mt-5">
    <div class="col-lg-7 col-md-9 offset-lg-3 offset-md-2">
      <h3>Edit your Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>/edit?_method=PUT"  class="needs-validation mt-4" novalidate enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" placeholder="Add a title"
           class="form-control" name="listing[title]"
           id="title" value="<%=listing.title%>" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea type="text" placeholder="Add a description"
           class="form-control" id="description" 
           name="listing[description]" required>
           <%=listing.description%>
          </textarea>
        </div>
        <div class="row">
          <div class="mb-3 col-md-8">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control"
             id="image" name="listing[image]" value="<%=listing.image.url%>">
          </div>
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" id="price" name="listing[price]" value="<%=listing.price%>" required>
          </div>  
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="Enter location"
             class="form-control" id="location" name="listing[location]" value="<%=listing.location%>" required>
          </div>
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input type="text" class="form-control"
             placeholder="Enter country" id="country" name="listing[country]" value="<%=listing.country%>" required>
          </div>  
        </div>
        <div class="my-5">
          <button class="btn edit-btn" type="submit">Done</button>
        </div>
      </form>    
    </div>
  </div>
</body>
